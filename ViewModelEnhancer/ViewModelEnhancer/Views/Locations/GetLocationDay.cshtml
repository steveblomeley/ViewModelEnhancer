@model ViewModelEnhancer.Models.LocationDay

@{
    ViewBag.Title = "title";
}

<h2>Welcome to @Model.Name</h2>


<h3>Your 24 hour forecast follows...</h3>

<table class="table table-striped table-condensed">
    <thead>
    <tr>
        <th>Hour</th>
        <th>Forecast</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var hour in Model.HourlyForecasts)
        {
            <tr>
                <td>@hour.Hour.ToString(@"hh\:mm")</td>
                <td>@(string.IsNullOrWhiteSpace(hour.Weather) ? "-- missing forecast --" : hour.Weather)</td>
            </tr>
        }
    </tbody>
</table>
